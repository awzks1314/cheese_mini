page {
  padding:20rpx;
}
.radius_box{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.my_header_avatar{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}
.message_message_title{
  width: calc(100% - 120rpx);
}
.red_dot_content{
  position: absolute;
  bottom: -10rpx;
  right: 0;
  padding: 6rpx;
  background-color: #fff;
  border-radius: 50%;
}
.red_dot{
  display: block;
  background-color: red;
  border-radius: 50%;
  width: 16rpx;
  height: 16rpx;
  
}