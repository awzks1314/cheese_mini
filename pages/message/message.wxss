.header_box{
  background-color: #436FC3;
  height: 104rpx;
}
.header_content{
  width: 702rpx;
  height: 184rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx 88rpx 32rpx 90rpx;
  display: flex;
  align-items: center;
  position: absolute;
  left: 24rpx;
  top: 24rpx;
}
.header_image{
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 12rpx;
}
.header_text{
  font-weight: 400;
font-size: 24rpx;
line-height: 28rpx;
color: #000000;
}
.right_one{
  margin-right: 128rpx;
}
.right_two{
  margin-right: 104rpx;
}
.list_box{
  padding: 0 24rpx 24rpx;
}
.list_item{
  height: 120rpx;
  background: #FFFFFF;
  box-shadow: 0px 8rpx 24rpx rgba(0, 0, 0, 0.04);
  border-radius: 32rpx;
  margin-bottom: 24rpx;
  padding: 16rpx;
  display: flex;
}

.my_header_avatar{
  width: 88rpx;
  height: 88rpx;
  border-radius: 24rpx;
  margin-right: 24rpx;
}
.message_message_title{
  width: calc(100% - 120rpx);
}
.message_message_title_top{
  padding-top: 6rpx;
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}
.message_message_title_top_one{
  font-weight: 700;
  font-size: 28rpx;
  line-height: 32rpx;
  color: #1B1B1B;
}
.message_message_title_top_two{
  font-weight: 400;
  font-size: 24rpx;
  line-height: 28rpx;
  color: #868686;
}
.message_message_title_bottom{
  font-weight: 400;
  font-size: 24rpx;
  line-height: 28rpx;
  color: #868686;
}