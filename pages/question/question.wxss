page {
  background-color: #fff;
  width: 100%;
  height: 100%;
}
swiper{
  width: 100%;
  height: 100%;
}
.swiper_style{
  width: calc(100% - 80rpx) !important;
  height: 100%;
  position: relative;
}
.one_item_box{
  width: 170rpx;
  height: 300rpx;
}
.on_item_card{
  width: 170rpx;
  height: 240rpx;
  border-radius: 50rpx;
  background-color: #0081ef;
}
.on_item_icon_box{
  width: 46rpx;
  height: 46rpx;
  background-color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  left: calc(50% - 23rpx);
  top: -23rpx;
  
}
.on_item_icon{

  position: absolute;
  left: 4rpx;
  bottom: 4rpx;
}

.two_item_tab{
  width: 160rpx;
  height: 70rpx;
  border-radius: 50rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  text-align: center;
  line-height: 70rpx;
}
.two_item_tab_active{
  background-color: #0081ef;
  color: #fff;
}

.next{
  width: 200rpx;
  height: 80rpx;
  border-radius: 50rpx;
  position: absolute;
  bottom: 120rpx;
  left: calc(50% - 100rpx);
  display: flex;
  align-items: center;
  justify-content: center;
}