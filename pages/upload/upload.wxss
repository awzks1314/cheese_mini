.input_style{
  text-align: right;
}

.bottom_border {
  border-top: 1rpx solid #eee;
}




.process_wrap {
  position: relative;
  width: 670rpx;
  margin: 20rpx 0;
}
.process_wrap .line {
  width: 670rpx;
  height: 2rpx;
  background: #B5B8C2;
}
 
.process_wrap .active_line {
  position: absolute;
  top: -4rpx;
  left: 0;
  max-width: 670rpx;
  height: 8rpx;
  background: #436FC4;
}
 
.process_wrap .spot {
  position: absolute;
  top: -20rpx;
  left: 0;
  width: 40rpx;
  height: 40rpx;
  background: #436FC4;
  box-shadow: 0px 2px 10px 0px rgba(196, 200, 204, 0.5);
  border: 2px solid #FFFFFF;
  border-radius: 100%;
}

.opacity{
  opacity: 1;
}
.opacitys{
  position: absolute;
  bottom: -200rpx;
  left: 0;
  width: 100%;
  transition:  all 10s linear;
}
.share_content{
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  /* overflow: hidden; */
}
.adCloseMain{
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  bottom: -120rpx;
  right: calc(50% - 20rpx);
  background-color: rgba(0, 0, 0, 0.4);
  border-radius: 50%;
  border: 2rpx solid #aaaaaa;
  display: flex;
  align-items: center;
  justify-content: center;
}
