@import '/static/style/main.wxss';
.w100{
  width:100%;
}
.h100{
  height:100%;
}
.container {

  width: 100%;
  height: 100%;
  padding-bottom: calc(env(safe-area-inset-bottom) / 2);
}
.relative{
  position: relative;
}

/* 模板小程序专用 */
.text-tea{
  color:#ADB838;
}
.bg-tea{
  background: #ADB838;
  color: #fff;
}
.teaBg{
  background-color: #E8EACF;
}
.tea-line{
  color: #ADB838;
    border: 1rp x solid #ADB838;
}
.bg-theme{
  background-color: #fff;
}

.app_title{
  position: relative;
}
.app_title::after {
  content: ' ';
  position: absolute;
  bottom: -10rpx;
  left: 0; 
  width: 60rpx;
  height: 5rpx;
  border-radius: 10rpx;
  background-color: #0081ff;
}
.scroll-style{
  white-space: nowrap;
  width: 100%
}
::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}
.border-radius-left{
  border-radius: 24rpx 24rpx 24rpx 0px;
}

.border-radius-right{
  border-radius: 24rpx 24rpx 0px 24rpx;
}

