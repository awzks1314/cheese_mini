page {
  background-color: #fff;
}
.post_upload{
  width: 100%;
}

.post_upload_content{
  display: inline-flex;
  width: 160rpx;
  height: 160rpx;
  border-radius: 20rpx;
  overflow: hidden;
  position: relative;
  margin-right: 20rpx;
}
.post_img_style{
  width: 100%; 
  height: 100%;
  position: absolute;
  
}
.post_upload_content .free-tag{
  position: absolute;
    right: 0;
    top: 0;
    padding: 0rpx 8rpx;
    height: auto;
    background-color: rgba(0, 0, 0, 0.5);
}
textarea {
	margin: 32rpx 0 30rpx;
	height: 560rpx;
	width: 100%;
	line-height: 40rpx;
	flex: 1;
	font-size: 30rpx;
	padding: 0;
}
.post_word_limit{
  position: absolute;
  bottom: 0rpx;
  right: 20rpx;
}
.info_button{
  width: 100%;
  position: fixed;
  bottom:0;
  padding: 20rpx;
  height: 120rpx;
}
.info_button_content{
  height: 100%;
  background-color: #0081ef;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}
.post_input_style{
  font-weight: 800;
}