<view class="padding-top padding-left">
  <scroll-view class="post_upload scroll-style" scroll-x="true"> 
    <view class="post_upload_content " wx:for="{{imgList}}" wx:key="index" bindtap="ViewImage" data-url="{{imgList[index]}}">
      <image src='{{imgList[index]}}' class="post_img_style" mode='aspectFill'></image>
      <view class="free-tag bg-red" catchtap="DelImg" data-index="{{index}}">
        <free-icon name="close" size='24' color='#fff'></free-icon>
      </view>
    </view>
    <view class="post_upload_content bg-gray" bindtap="ChooseImage" wx:if="{{imgList.length<9}}">
      <free-icon name="add" class="free-upicon"></free-icon>
    </view>
  </scroll-view>
</view>
<view class="relative padding-lr ">
  <textarea maxlength="300" bindinput="textareaAInput" placeholder="有什么新鲜有趣内容，快来和别人分享吧" value="{{info}}"></textarea>
  <view class="post_word_limit flex align-center justify-between ">
    <!-- <view class="text-blue" bindtap="openShow"># 选择话题 #</view> -->
    <picker bindchange="bindPickerChange" value="{{sessionIndex}}" range="{{arraySession}}">
        <view class="picker text-blue">
          # {{name || '选择话题'}} # 
        </view>
      </picker>
    <view class="text-gray">{{info.length}}/300</view>
  </view>
</view>

<view class="padding-lr">
  <view class="solid-bottom"></view>
</view>

