<view class="padding  flex align-center justify-end">
  <text class="text-lg padding-right-xs">匿名发送</text>
  <switch class="blue" checked></switch>
</view>

<free-gap height="80"></free-gap>
<view class=" info_button">
  <view class="info_button_content">
    <free-icon name="edit" color="#fff"></free-icon>立刻发帖</view>
</view>
<free-drawer 
    show="{{show}}"
    mode="bottom" 
    closeable="{{false}}"
    length="50%">
