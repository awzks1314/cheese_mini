.header_search{
  width: 440rpx;
  height: 66rpx;
  background: #FFFFFF;
  border-radius: 48rpx;
  font-weight: 400;
  font-size: 24rpx;
  line-height: 28rpx;
  color: #868686;
  display: flex;
  align-items: center;
}
.header_image{
  width: 36rpx;
  height: 36rpx;
  margin-right: 21rpx;
  margin-left: 29rpx;
}
.left_back{
  padding-left: 32.5rpx;
}
.header_left_image{
  width: 30rpx;
  height: 24rpx;
}
.input_style{
  padding-right: 36rpx;
  flex: 1;
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #868686;  
  overflow: hidden;
}
.input_line{
  height: 60rpx;
  width: 2rpx;
  background-color: #f0f0f0;
}
.input_image{
  width: 48rpx;
  height: 48rpx;
  margin-left: 24rpx;
  margin-right:32rpx ;
}
.list_item_box{
  padding: 24rpx;
}
.list_item{
  padding: 16rpx;
  width: 702rpx;
  height: 242rpx;
  background: #FFFFFF;
  box-shadow: 0px 8rpx 24rpx rgba(0, 0, 0, 0.04), 0px 8rpx 24rpx rgba(0, 0, 0, 0.04);
  border-radius: 32rpx;
  display: flex;
  margin-bottom: 24rpx;
}
.my_header_avatar{
  width: 136rpx;
  height: 200rpx;
  border-radius: 24rpx;
}
.list_content{
  flex: 1;
  padding-left: 24rpx;
}
.list_item_name{
  font-weight: 700;
  font-size: 28rpx;
  line-height: 32rpx;
  color: #1B1B1B;
  margin-bottom: 8rpx;
}
.list_item_school {
  font-weight: 400;
  font-size: 26rpx;
  line-height: 30rpx;
  color: #868686;
  margin-bottom: 8rpx;
}
.list_item_tag_box{
  display: flex;
}
.list_item_tag{
  padding: 9rpx 16rpx;
  border-radius: 48rpx;
  font-weight: 700;
  font-size: 20rpx;
  line-height: 22rpx;
  color: #F8F8F8 ;
  margin-bottom: 8rpx;
  margin-right: 8rpx;
}
.list_item_desc{
  font-weight: 400;
  font-size: 26rpx;
  line-height: 160%;
  color: #868686;
}





.info_button{
  width: 100%;
  position: fixed;
  bottom:0;
  padding: 20rpx;
  height: 120rpx;
}
.info_button_content{
  height: 100%;
  background-color: #436FC4;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}