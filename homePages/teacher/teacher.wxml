<free-input 
  class="input_style"
  placeholder='请输入您想要查找的老师名字'
  close="true"
  bind:input="input"
  bind:confirm = "confirm"
  bind:close = "close" 
></free-input>
<view class="padding">
  <view class="padding-sm bg-white radius flex margin-bottom" wx:for="{{7}}" wx:key="index">
    <image src="https://joeschmoe.io/api/v1/random" class="my_header_avatar bg-white shadow-warp"></image>
    <view class="padding-left flex-sub">
      <text class="text-bold">Jads dsaddsw</text>
      
      <view class="text-gray text-sm  padding-tb-xs">
        <text>英国伦敦大学</text>
        <text class="padding-left">高中数学骨干教师</text>
      </view>

      <view class="">
        <free-rate 
        current="{{3}}"
        size="26"
          ></free-rate>
          <text class="text-sm text-bold padding-left-xs">3.7</text>
      </view>

      <view>
        <view class="flex align-center padding-tb-xs">
          <free-icon name="time" color="#0081ef" size="28"></free-icon>
          <text class="text-gray text-sm padding-left-xs">279 hours tutoring</text>
        </view>

        <view class="flex align-center">
          <free-tag size="sm" type="blue" effect="light" class="margin-left-xs">Python</free-tag>
          <free-tag size="sm" type="blue" effect="light" class="margin-left-xs">Java</free-tag>
          <free-tag size="sm" type="blue" effect="light" class="margin-left-xs">Net</free-tag>
        </view>
      </view>
      <view class="padding-top-xs flex align-center text-gray text-sm">
        2+ years of Computer Science tutoring experience，Significant coding experience
      </view>
    </view>
  </view>
</view>

