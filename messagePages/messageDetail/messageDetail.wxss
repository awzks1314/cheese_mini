page {
  background-color: #f0f0f0;
}
.message_sumit_box{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 20rpx;
  padding-bottom: calc(20rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}
.inputStyle{
  display: flex;
  align-items: center;
  justify-items: center;
  background: #f5f5f5;
  line-height: 32px;
  height: 64rpx;
  font-size: 24rpx;
  color: #333333;
  flex: 1;
  overflow: hidden;
}

.user_avatar{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}

.message_item_content{
  max-width: calc(100% - 100rpx);
  padding: 20rpx;
  position: relative;
  display: flex;
  align-items: center;
}
.message_time_left{
  padding: 10rpx 0 0 90rpx;
  font-size: 24rpx;
}
.message_time_right{
  padding: 10rpx 90rpx 0 0;
  font-size: 24rpx;
  text-align: right;
}
.sanjiao_left{
  position: absolute;
  left: -20rpx;
  top: 30rpx;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid #fff;
  border-bottom: 10rpx solid transparent;
  border-top: 10rpx solid transparent;
}

.sanjiao_right{
  position: absolute;
  right: -20rpx;
  top: 30rpx;
  border-left: 10rpx solid #fff;
  border-right: 10rpx solid transparent;
  border-bottom: 10rpx solid transparent;
  border-top: 10rpx solid transparent;
}
