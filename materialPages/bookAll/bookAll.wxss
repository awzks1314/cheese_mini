page {
  background: #ffffff;
  
}
.bookAll_header{
  /* height: 300rpx; */
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  /* padding-bottom: 40rpx; */
  align-items: center;
  padding: 80rpx 30rpx 0;
  background-color: #436FC4;
}
.bookItem{
  width: 500rpx;
  color: #fff;
  
}
.mater_item_avatars{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}
.btn_box{
  width: 100%;
  margin:60rpx 0 0;
  height: 140rpx;
  background-color: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.mater_item{
  display: block;
  display: inline-flex;
  width: 320rpx;
  /* margin-top: 20rpx; */
  margin-left: 30rpx;
  
}
.mater_item:nth-last-child(1){
  margin-right: 30rpx;
}
.mater_item_image{
  width: 380rpx;
  height: 200rpx;
  display: block;
}

.tag_content{
  width: 320rpx;
  white-space:normal !important;  
}
.tag_item{
  margin-top: 10rpx;
}

.mater_item_avatar{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}
.mater_item_avatars{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}
.mater_item_avatar_box{
  position: absolute;
  top: -30rpx;
  background-color: #fff;
  border-top-right-radius: 50rpx;
  border-top-left-radius: 50rpx;
  padding: 10rpx 20rpx;
}