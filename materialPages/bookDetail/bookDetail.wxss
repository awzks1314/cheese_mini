page {
  padding: 30rpx;
}
.imageBox{
  width: 690rpx;
  height: 690rpx;
  background-color: #436FC4;
  border-radius: 30rpx;
}
.name{
  padding: 20rpx 0;
  width: 580rpx;
  font-size: 36rpx;
  font-weight: 800;
}
.sub_box{
  height: 60rpx;
}
.lin_text{
  padding-left: 8rpx;
  padding-top: 6rpx;
  /* line-height: 30rpx; */
}
.detail_content{
  line-height: 40rpx;
  padding-top: 20rpx;
}
.btn_box{
  margin:30rpx 0 ;
  height: 140rpx;
  border: 2rpx solid #f0f0f0;
}
.post_bottom{
  position: fixed;
  bottom: 0;  
  padding-bottom: 20rpx;
  padding-bottom: calc(20rpx + constant(safe-area-inset-bottom));  
  padding-bottom: calc(20rpx +env(safe-area-inset-bottom));  
  left: 30rpx;
  width: calc(100% - 60rpx);
  height: 120rpx;
}
.read{
  width: 50%;
  height: 80rpx;
  border-radius: 20rpx;
  background-color: #ad37fc;
  color: #fff;
  font-weight: 800;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
}
.play{
  width: 50%;
  height: 80rpx;
  border-radius: 20rpx;
  background-color: #06e95d;
  color: #fff;
  font-weight: 800;
  display: flex;
  align-items: center;
  justify-content: center;
}