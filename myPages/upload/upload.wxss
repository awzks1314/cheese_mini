page {
  background-color: #fff;
}
.input_style{
  text-align: right;
}
.info_button{
  background-color: #fff;
  width: 100%;
  position: fixed;
  bottom:0;
  padding: 20rpx;
  height: 120rpx;  
  z-index: 999;
}
.info_button_content{
  height: 100%;
  background-color: #0081ef;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}
.bottom_border {
  border-top: 1rpx solid #eee;
}
.upload_li{
  /* background-color: var(--white); */
  padding: 30rpx  0 30rpx;
  min-height: 100rpx;
}
.upload_li .title {
	text-align: justify;
	padding-right: 30rpx;
	font-size: 30rpx;
	position: relative;
	height: 60rpx;
  line-height: 60rpx;
  font-weight: 800;
}
.upload_li .title {
  min-width: calc(3em + 30rpx);
}
.upload_li input {
	flex: 1;

	color: #555;
	/* padding-right: 20rpx; */
}
.upload_item{
  min-width: 140rpx;
  height: 60rpx;
  border-radius: 50rpx;
  background-color: #f0f0f0;
	color: var(--black);
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  margin-bottom: 10rpx;
  margin-top: 10rpx;
  font-weight: 600;
  /* padding: 10rpx 20rpx; */
}
.upload_item_active{
  background-color: #0081ef;
  color: #fff;
}
.myPages_upload{
  background-color: var(--blueLight);
  height: 300rpx;
  border-radius: 20rpx;
  margin: 30rpx 0;
  border: 4rpx dotted #0081ef;
}

.upload_image{
  width: 80rpx;
  height: 80rpx;
}
.share_content{
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  overflow: hidden;
}

.process_wrap {
  position: relative;
  width: 670rpx;
  margin: 20rpx 0;
}
.process_wrap .line {
  width: 670rpx;
  height: 2rpx;
  background: #B5B8C2;
}
 
.process_wrap .active_line {
  position: absolute;
  top: -4rpx;
  left: 0;
  max-width: 670rpx;
  height: 8rpx;
  background: #0081ef;
}
 
.process_wrap .spot {
  position: absolute;
  top: -20rpx;
  left: 0;
  width: 40rpx;
  height: 40rpx;
  background: #0081ef;
  box-shadow: 0px 2px 10px 0px rgba(196, 200, 204, 0.5);
  border: 2px solid #FFFFFF;
  border-radius: 100%;
}

.opacity{
  opacity: 1;
}
.opacitys{
  position: absolute;
  bottom: -200rpx;
  left: 0;
  width: 100%;
  transition:  all 10s linear;
}