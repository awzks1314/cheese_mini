.red_dot{
  width:18rpx;
  height: 18rpx;
  border-radius: 50%;
  background-color: red;
}

.radius_box{

  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.my_header_avatar{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.commit_btn{
  border: 2rpx solid #f0f0f0;
}

.commit_box{
  margin-top: 20rpx;
  background:#f0f0f0;
  padding: 20rpx;
  border-radius: 10rpx;
}

.commit_fixed{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: transparent;
  display: flex;
  align-items: flex-end;
}
.fixee{
  padding: 20rpx;
  padding-bottom: calc(20rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}
.inputStyle{
  display: flex;
  align-items: center;
  justify-items: center;
  background: #f5f5f5;
  line-height: 32px;
  height: 64rpx;
  font-size: 24rpx;
  color: #333333;
  flex: 1;
  overflow: hidden;
}