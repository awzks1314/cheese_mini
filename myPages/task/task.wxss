page {
  padding: 20rpx;
}
.task_card{
  width: 100%;
  height: 260rpx;
  border-radius: 20rpx;
  background-image: url('https://z3.ax1x.com/2021/05/14/grhfMV.png');
	background-size: cover;
  background-position: center;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}

.task_button{
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.task_list_img{
  border-radius: 50%;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.task_list_button{
  width: 160rpx;
  text-align: center;
  padding: 10rpx 10rpx;
  border-radius: 30rpx;
}