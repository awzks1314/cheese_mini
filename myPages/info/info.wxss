.info_style{
  position: relative;
  top: -20rpx;
  background-color: #fff;
  border-top-right-radius: 20rpx;
  border-top-left-radius: 20rpx;
 
}
.info_avatar{
  position: relative;
  top: -40rpx;
  left: calc(50% - 60rpx);
  width: 120rpx;
  height: 120rpx;
  background-color: #fff;
  padding: 10rpx;
  border-radius: 50%;
}
.my_header_avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.input_style{
  text-align: right;
}


.info_button{
  width: 100%;
  position: fixed;
  bottom:0;
  padding: 20rpx;
  height: 120rpx;
}
.info_button_content{
  height: 100%;
  background-color: #436FC4;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}